/* config/macros.dtsi */
#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>

/ {
    behaviors {
        minimize_tree: minimize_tree_macro {
            compatible = "zmk,behavior-macro";
            label = "MINIMIZE_TREE";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LSHIFT>
                , <&macro_tap &kp C>
                , <&macro_release &kp LSHIFT>;
        };

        hide_hovered_component: hide_hovered_component_macro {
            compatible = "zmk,behavior-macro";
            label = "HIDE_HOVERED_COMPONENT";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LSHIFT>
                , <&macro_tap &kp TAB>
                , <&macro_release &kp LSHIFT>;
        };

         show_hidden_components: show_hidden_components_macro {
            compatible = "zmk,behavior-macro";
            label = "SHOW_HIDDEN_COMPONENTS";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LCTRL>
                , <&macro_press &kp LSHIFT>
                , <&macro_tap &kp TAB>
                , <&macro_release &kp LSHIFT>
                , <&macro_release &kp LCTRL>;
        };

        isolate: isolate_macro {
            compatible = "zmk,behavior-macro";
            label = "ISOLATE";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_1>;
        };

        construction: construction_macro {
            compatible = "zmk,behavior-macro";
            label = "CONSTRUCTION";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_2>;
        };

        measure: measure_macro {
            compatible = "zmk,behavior-macro";
            label = "MEASURE";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_3>;
        };

        shortcutbar: shortcutbar_macro {
            compatible = "zmk,behavior-macro";
            label = "SHORTCUTBAR";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_4>;
        };

        escape: escape_macro {
            compatible = "zmk,behavior-macro";
            label = "ESCAPE";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_5>;
        };

        save: save_macro {
            compatible = "zmk,behavior-macro";
            label = "SAVE";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp S>
                , <&macro_release &kp LCTRL>;
        };

        equations: equations_macro {
            compatible = "zmk,behavior-macro";
            label = "EQUATIONS";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_6>;
        };

        snapnormalto: snapnormalto_macro {
            compatible = "zmk,behavior-macro";
            label = "SNAPNORMALTO";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_7>;
        };

        switchtabs: switchtabs_macro {
            compatible = "zmk,behavior-macro";
            label = "SWITCHTABS";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp TAB>
                , <&macro_release &kp LCTRL>;
        };

        fit: fit_macro {
            compatible = "zmk,behavior-macro";
            label = "FIT";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp KP_NUMBER_8>;
        };

        alttab: alttab_macro {
            compatible = "zmk,behavior-macro";
            label = "ALTTAB";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LALT>
                , <&macro_tap &kp TAB>
                , <&macro_release &kp LALT>;
        };

        quote: quote_macro {
            compatible = "zmk,behavior-macro";
            label = "QUOTE";
            #binding-cells = <0>;
            bindings 
                = <&macro_tap &kp DQT>
                , <&macro_tap &kp SPACE>;
        };

        test: test_macro {
            compatible = "zmk,behavior-macro";
            label = "TEST";
            #binding-cells = <0>;
            bindings 
                = <&macro_press &kp LCTRL>
                , <&macro_tap &kp B>
                , <&macro_release &kp LCTRL>;
        };

       hideunhide: hideunhide_macro {
            compatible = "zmk,behavior-hold-tap";
            label = "HIDEUNHIDE";
            #binding-cells = <2>;
            tapping-term-ms = <300>;
            quick-tap-ms = <125>;
            global-quick-tap;
            bindings
                = <&show_hidden_components>
                , <&hide_hovered_component>;
        };
    };
};
